block b-diary {

    js: true

    content: [
        { elem: 'header', content: 'Ежедневник', tag: 'h1' },
		{
            elem: 'control',
            content: [
                {
                    block: 'button',
                    content: ' << ',
                    mix: [{ block: 'b-diary', elem: 'preview' }]
                },
                {
                    elem: 'date'
                },
                {
                    block: 'button',
                    content: ' >> ',
                    mix: [{ block: 'b-diary', elem: 'next' }]
                }
            ]
        },
        {
            elem: 'events',
            content: [ { elem: 'events-list' } ]
        },
        {
            elem: 'new-event',
            content: [
                {
                    block: 'input',
                    mix: [{ block: 'b-diary', elem: 'new-event-title' }],
                    content: { elem: 'control' }
                },
                {
                    block: 'button',
                    mix: [{ block: 'b-diary', elem: 'new-event-btn' }],
                    content: 'Добавить'
                }
            ]
        }
    ]
	
}
